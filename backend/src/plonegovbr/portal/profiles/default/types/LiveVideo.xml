<?xml version="1.0" encoding="utf-8"?>
<object xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        meta_type="Dexterity FTI"
        name="LiveVideo"
        i18n:domain="plonegovbr.portal"
>

  <!-- Basic properties -->
  <property name="title"
            i18n:translate=""
  >Live</property>
  <property name="description"
            i18n:translate=""
  >Uma série de conteúdos em vídeo</property>

  <property name="allow_discussion">True</property>
  <property name="factory">LiveVideo</property>

  <!-- Hierarchy control -->
  <property name="filter_content_types">True</property>
  <property name="allowed_content_types">
    <element value="Document" />
    <element value="Image" />
  </property>

  <property name="global_allow">True</property>

  <!-- Schema, class and security -->
  <property name="add_permission">plonegovbr.portal.livevideo.add</property>
  <property name="klass">plonegovbr.portal.content.live.LiveVideo</property>
  <property name="schema">plonegovbr.portal.content.live.ILiveVideo</property>

  <!-- Enabled behaviors -->
  <property name="behaviors"
            purge="false"
  >
    <element value="plone.basic" />
    <element value="volto.navtitle" />
    <element value="plone.namefromtitle" />
    <element value="plone.shortname" />
    <element value="plone.excludefromnavigation" />
    <element value="plone.versioning" />
    <element value="volto.preview_image_link" />
    <element value="volto.blocks" />
  </property>

</object>
